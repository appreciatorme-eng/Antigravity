# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Supabase Service Role (server-side only - keep secret!)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Google OAuth (optional - for Google Sign In)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Google Gemini AI (for itinerary generation)
GOOGLE_GEMINI_API_KEY=your-gemini-api-key

# WhatsApp webhook/auth settings
WHATSAPP_VERIFY_TOKEN=your-webhook-verify-token
WHATSAPP_TOKEN=your-whatsapp-cloud-api-token
WHATSAPP_PHONE_ID=your-whatsapp-phone-number-id
WHATSAPP_APP_SECRET=your-meta-app-secret
# WHATSAPP_ALLOW_UNSIGNED_WEBHOOK=false

# Notification queue processing hardening
NOTIFICATION_CRON_SECRET=your-queue-cron-secret
# NOTIFICATION_QUEUE_MAX_ATTEMPTS=5
# NOTIFICATION_QUEUE_BACKOFF_BASE_MINUTES=5
# NOTIFICATION_QUEUE_BACKOFF_MAX_MINUTES=60

# App URL (for OAuth redirects)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Optional: Analytics
# NEXT_PUBLIC_POSTHOG_KEY=your-posthog-key
# NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Optional: Sentry (error tracking)
# SENTRY_DSN=https://examplePublicKey@o0.ingest.sentry.io/0
# NEXT_PUBLIC_SENTRY_DSN=https://examplePublicKey@o0.ingest.sentry.io/0
# SENTRY_ORG=your-sentry-org-slug
# SENTRY_PROJECT=your-sentry-project-slug
# SENTRY_AUTH_TOKEN=your-sentry-auth-token
